{% extends 'base.html.twig' %}

{% block title %}Inviter un ami{% endblock %}

{% block body %}
    <h1>Trouve ton ami</h1>
<div class="container d-flex justify-content-center">
        {{ form_start(form) }}
        <div class="search-friend">
            {{ form_row(form.search) }}
        </div>
            <div class="d-flex justify-content-center">
                <button class="search-btn ml-0 mt-3 p-0">Rechercher</button>
            </div>

        {{ form_end(form) }}
    </div>
    <div class="list d-flex justify-content-center">
        {% for friend in friends %}
            <ul class="p-0">
            <li><a href="{{ path('choose_challenge', {'id': friend.id}) }}">{{ friend.username }}</a></li>
            </ul>
        {% endfor %}
    </div>
</div>

{% endblock %}
