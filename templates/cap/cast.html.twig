{% extends 'base.html.twig' %}

{% block title %}New Cap{% endblock %}

{% block body %}
    <div class="card-defi margin-top d-flex flex-column justify-content-center align-items-center">

        <h2 class="cap">{{ challenge.defi.title}}</h2>
        <div class="color-white">
        <div class="cast-bloc">
        <h4 class="pt-4">Envoyé à : {{ challenge.catcher.username }}</h4>
        <p class="mt-3 ml-5 mr-5">{{ challenge.defi.description }}</p>
        <div class="pb-4 mt-3">Nombre de points pour ce défi: <span>{{ challenge.defi.point }}</span></div>
        </div>
        </div>
    </div>
{% endblock %}
