{% extends 'base.html.twig' %}

{% block title %}New Cap{% endblock %}

{% block body %}

    <div class="card-defi margin-top d-flex flex-column justify-content-center align-items-center">

        <div id="well-done" class="effcet justify-content-center align-items-center">
            <img id="well-done-img" src="{{ asset('build/images/well-done.png') }}" alt="Well done"/>
        </div>
        <h2 class="cap">{{ defi.title }}</h2>
        <div class="color-white pb-2" style="height: 233px;">
        <div class="cast-bloc" style="height: 233px;">
        <h4 class="pt-4">envoyé par : {{ creator.username }}</h4>
        <p class="mt-3 ml-5 mr-5">{{ defi.description }}</p>
        <div class="mt-3 pb-4">nombre de point pour ce défi : <span>{{ defi.point }}</span></div>

        <div class="cap-todo pb-4">
            <form method="post" enctype="multipart/form-data">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="btn-simple mt-5" id="todo-button">C'est réussi ?</div>

        <div class="d-flex justify-content-center">
            <button class="btn-simple btn-subimited mt-3" type="submit">Valider</button>
        </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
