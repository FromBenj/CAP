{% extends 'base.html.twig' %}

{% block title %}Start{% endblock %}

{% block body %}
    <h1>Choisis ton défi
        {% if friend.username != app.user.username %}
            pour {{ friend.username }}</h1>
        {% endif %}
    <div class="">
        <div class="btn-margin">
            <div class="btn-home mt-5 mb-5">
                {% if friend.id == app.user.id %}
                    <a href="{{ path('cap_unknown_new')}}">Créer un défi</a>
                {% else %}
                    <a href="{{ path('cap_friend_new', {'idFriend': friend.id}) }}">Créer un défi</a>
                {% endif %}
            </div>
        </div>
        <div class="btn-margin">
            <div class="btn-home mt-5">
                {% if friend.id == app.user.id %}
                    <a href="{{ path('cap_unknown_alea') }}">Défi aléatoire</a>
                {% else %}
                    <a href="{{ path('cap_friend_alea', {'idFriend': friend.id}) }}">Défi aléatoire</a>
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}
